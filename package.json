{
	"name": "sfk-studio",
	"displayName": "Sfk.Studio",
	"description": "",
	"version": "1.0.1",
	"engines": {
		"vscode": "^1.43.0"
	},
	"repository": {
		"url": "https://github.com/phan2tom/vscode.sfk-studio.git"
	},
	"publisher": "divalto-ttp",
	"categories": [
		"Extension Packs"
	],
	"activationEvents": [
		"onCommand:sfk.studio.goToDefinitionConfiguration",
		"onCommand:sfk.studio.goToDefinitionTypeScript"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "sfk.studio.goToDefinitionConfiguration",
				"title": "Go To Definition"
			},
			{
				"command": "sfk.studio.goToDefinitionTypeScript",
				"title": "Go To Definition"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceFilename =~ /\\.(component|condition|datasource|menu|projectsettings|schema)\\.json$/",
					"group": "navigation",
					"command": "sfk.studio.goToDefinitionConfiguration"
				},
				{
					"when": "resourceFilename =~ /\\.script(library)?\\.ts$/",
					"group": "navigation",
					"command": "sfk.studio.goToDefinitionTypeScript"
				}
			]
		},
		"keybindings":[
			{
				"when": "resourceFilename =~ /\\.(component|condition|datasource|menu|projectsettings|schema)\\.json$/",
				"key": "ctrl+f12",
				"command": "sfk.studio.goToDefinitionConfiguration"
			},
			{
				"when": "resourceFilename =~ /\\.script(library)?\\.ts$/",
				"key": "ctrl+f12",
				"command": "sfk.studio.goToDefinitionTypeScript"
			}
		],
		"jsonValidation": [
			{ "fileMatch": "*.component.json",	"url": "https://projects-dgs.divalto.com/_static/sfk/jsonschemas/component.json" },
			{ "fileMatch": "*.condition.json",	"url": "https://projects-dgs.divalto.com/_static/sfk/jsonschemas/condition.json" },
			{ "fileMatch": "*.datasource.json",	"url": "https://projects-dgs.divalto.com/_static/sfk/jsonschemas/datasource.json" },
			{ "fileMatch": "*.menu.json",	"url": "https://projects-dgs.divalto.com/_static/sfk/jsonschemas/menu.json" },
			{ "fileMatch": "*.projectsettings.json",	"url": "https://projects-dgs.divalto.com/_static/sfk/jsonschemas/projectsettings.json" },
			{ "fileMatch": "*.schema.json",	"url": "https://projects-dgs.divalto.com/_static/sfk/jsonschemas/schema.json" }
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
